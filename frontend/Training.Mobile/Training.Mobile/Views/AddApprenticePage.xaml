<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Training.Mobile.Views.AddApprenticePage"
             xmlns:model="clr-namespace:Training.Mobile.Models"
             xmlns:local="clr-namespace:Training.Mobile.ViewModels" 
             Title="Schrijf externe leerling in">
    <ScrollView>

        <VerticalStackLayout 
        Padding="30,0"
        Spacing="25">
            <Label Text="{Binding Training.Code}" FontSize="Title" />
            <Label Text="{Binding Training.Description}" FontSize="Body" />
           
            <Entry Text="{Binding FirstName, Mode=TwoWay}" Placeholder="Voonaam" />
            <Entry Text="{Binding LastName, Mode=TwoWay}" Placeholder="Achternaam" />
            <Entry Text="{Binding Company, Mode=TwoWay}" Placeholder="Bedrijf" />

            <Button
            Text="Schrijf in" 
            HorizontalOptions="Fill"
            Command="{Binding AddApprenticeCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>