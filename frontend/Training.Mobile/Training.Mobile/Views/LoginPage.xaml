<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Training.Mobile.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">
    <VerticalStackLayout Padding="10,0,10,0" VerticalOptions="Center">
        <Button VerticalOptions="Center" Text="Login"
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding IsLoggedOut}"/>
        <ActivityIndicator IsRunning="{Binding IsBusy}" />
        <Button VerticalOptions="Center" Text="Logout"
                Command="{Binding LogoutCommand}"
                IsEnabled="{Binding IsLoggedIn}"/>
    </VerticalStackLayout>
</ContentPage>